<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.authentication.LoginFragment"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:overScrollMode="always">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_layout"
                android:background="@drawable/orange_gradient_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height_login_fragment"
                android:gravity="center">

            <TextView
                    android:id="@+id/iv_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/content_description"
                    android:text="Welcome Back!"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintHeight_percent="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/header_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/body_title_margin_top_login_fragment"
                android:textSize="@dimen/title_text_size_login_fragment"
                android:text="@string/title_login"
                android:textColor="?attr/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email"
                android:theme="@style/AppTheme.Material"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginStart="@dimen/margin_of_til_login_fragment"
                android:layout_marginEnd="@dimen/margin_of_til_login_fragment"
                android:layout_marginTop="@dimen/margin_top_first_til_login_fragment"
                android:hint="@string/et_hint_email_id"
                android:textColorHint="?attr/colorSecondaryText"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:inputType="textEmailAddress"
                    android:theme="@style/AppTheme.Material"
                    android:padding="@dimen/padding_of_et_login_fragment"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password"
                android:theme="@style/AppTheme.Material"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginStart="@dimen/margin_of_til_login_fragment"
                android:layout_marginEnd="@dimen/margin_of_til_login_fragment"
                android:layout_marginTop="@dimen/margin_top_second_til_login_fragment"
                android:hint="@string/et_hint_password"
                app:endIconMode="password_toggle"
                android:textColorHint="?attr/colorSecondaryText"
                app:layout_constraintTop_toBottomOf="@id/til_email"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:inputType="textPassword"
                    android:theme="@style/AppTheme.Material"
                    android:padding="@dimen/padding_of_et_login_fragment"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/tv_forgot_password"
                android:clickable="true"
                android:focusable="false"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="@dimen/margin_top_forgot_pass_login_fragment"
                android:textSize="@dimen/forgot_password_text_size_login_fragment"
                app:layout_constraintTop_toBottomOf="@id/til_password"
                app:layout_constraintRight_toRightOf="@id/til_password"
                android:text="@string/lbl_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute" />

        <Button
                android:id="@+id/btn_login"
                android:layout_marginTop="@dimen/margin_top_get_started_btn_login_fragment"
                android:layout_marginLeft="@dimen/margin_of_til_login_fragment"
                android:layout_marginRight="@dimen/margin_of_til_login_fragment"
                android:text="@string/btn_lbl_login"
                android:textAllCaps="false"
                android:textColor="?attr/white"
                android:textSize="@dimen/get_started_btn_text_size_login_fragment"
                app:layout_constraintTop_toBottomOf="@id/tv_forgot_password"
                android:background="@drawable/orange_gradient_button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true" />

        <TextView
                android:id="@+id/tv_dont_have_an_account"
                android:layout_marginTop="@dimen/margin_top_register_text"
                android:layout_marginEnd="@dimen/margin_end_do_not_have_an_account_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_login"
                android:text="@string/don_t_have_an_account"
                app:layout_constraintRight_toLeftOf="@id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_register"
                android:layout_marginTop="@dimen/margin_top_register_text"
                android:clickable="true"
                android:focusable="false"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_dont_have_an_account"
                app:layout_constraintTop_toBottomOf="@id/btn_login"
                android:text="@string/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>